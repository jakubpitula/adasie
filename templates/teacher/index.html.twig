{% extends 'base.html.twig' %}

{% block title %}Nauczyciele{% endblock %}

{% block body %}
    <h1>Nauczyciele</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Imię i nazwisko</th>
                <th>Głosy</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
        {% for teacher in teachers %}
            <tr>
                <td>{{ teacher.id }}</td>
                <td>{{ teacher.name }}</td>
                <td>{{ teacher.minivotes|length }}</td>
                <td>
                    <a href="{{ path('teacher_show', {'id': teacher.id}) }}">pokaż</a>
                    <a href="{{ path('teacher_edit', {'id': teacher.id}) }}">edytuj</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('teacher_new') }}">Dodaj nauczyciela</a>
{% endblock %}
