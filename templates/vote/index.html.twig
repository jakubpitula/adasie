{% extends 'base.html.twig' %}

{% block title %}Głosy{% endblock %}

{% block body %}
    <h1>Głosy</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Data</th>
                <th>Ip</th>
                {% for category in categories %}
                    <th>{{category.name}}</th>
                {% endfor %}
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
        {% for vote in votes %}
            <tr>
                <td>{{ vote.id }}</td>
                <td>{{ vote.date|date() }}</td>
                <td>{{ vote.ip }}</td>
                {% for minivote in vote.minivotes %}
                    <td>{{minivote.teacher.name}}</td>
                {% endfor %}
                <td><a href="{{ path('vote_edit_delete', {'id': vote.id}) }}">Usuń</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
